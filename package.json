{
  "name": "berriart",
  "version": "5.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "stylelint-check": "stylelint-config-prettier-check",
    "check-links": "blc run -c linkchecker.js",
    "lint:css": "stylelint \"themes/berriart/static/css/*.css\"",
    "lint": "npm run lint:css",
    "copy:fonts": "cp -r \"node_modules/font-awesome/fonts\" \"themes/berriart/static/css\"",
    "build:css": "postcss \"themes/berriart/static/css/app.css\" --output \"themes/berriart/static/css/dist/app.css\"",
    "build": "npm run copy:fonts && npm run build:css",
    "watch:css": "onchange \"themes/berriart/static/css/*.css\" -- npm run lint:css && npm run build:css",
    "test": "start-server-and-test :1313 check-links",
    "release": "npm run build && hugo",
    "serve:hugo": "hugo server",
    "serve": "npm run build && concurrently \"npm:watch:css\" \"npm:serve:hugo\"",
    "start": "http-server public -p 1313",
    "deploy": "node deploy.js"
  },
  "author": "Alberto Varela",
  "private": true,
  "devDependencies": {
    "autoprefixer": "^8.6.4",
    "bs-broken-links-checker": "^0.2.0",
    "concurrently": "^3.6.0",
    "cssnano": "^3.10.0",
    "font-awesome": "^4.7.0",
    "http-server": "^0.11.1",
    "onchange": "^4.0.0",
    "postcss-cli": "^5.0.1",
    "postcss-import": "^11.1.0",
    "postcss-normalize": "^6.0.0",
    "precss": "^3.1.2",
    "prettier": "1.13.7",
    "reset-css": "^4.0.1",
    "sidr": "^2.2.1",
    "ssh-deploy-release": "^2.1.9",
    "start-server-and-test": "^1.5.0",
    "stylelint": "^9.3.0",
    "stylelint-config-prettier": "^3.3.0",
    "stylelint-config-standard": "^18.2.0"
  },
  "browserslist": "last 2 versions"
}
